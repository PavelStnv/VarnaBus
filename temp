<script>
    $("#student").click(function() {
      let loggedIn = "<?php echo checkIfLoggedIn() ?>";
      if (loggedIn != 1) {
        alert("Не сте влезли в профила си!");
        const modal = document.getElementById("exampleModal");
        modal.setAttribute("hidden", "");
        location.reload();
        return;
      }
    });
  </script>

